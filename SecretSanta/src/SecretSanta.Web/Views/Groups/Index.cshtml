@model List<GroupViewModel>
@{ViewBag.Title = "Groups";}

@{int counter = 0;}

@foreach(var groupViewModel in Model) {
    <section class = "grid grid-cols-2 marginLeftSpace">
        <a asp-action="Edit" asp-route-id=@counter>
            <label class = "generalLabel w-full generalHoverEffect" >@groupViewModel.Name</label> 
        </a>
        <div>
            <a class = "underlinedText" asp-action="Edit" asp-route-id=@counter>Edit</a>
            <form class="inline-block" asp-action="Delete" asp-route-id=@counter method="post">
                <button onclick="return confirm('Are you sure you want to delete @groupViewModel.Name')"><i class="fas fa-ban align-middle h-full text-red-500"></i></button>
            </form>
        </div>
        @{counter++;}
    </section>
}
<a class="generalButton marginTopSpace marginLeftSpace" asp-action="Create">Create</a>