<h1>Welcome to the Groups Page</h1>

@model List<GroupViewModel>

@{int counter = 0;}
@foreach(GroupViewModel group in Model)
{
    <section>
        <!-- cal:the asp-route... means the ... part is the value were assigning-->
        <h2>Group @counter: @group.GroupName</h2>    
        <a asp-controller="Groups" asp-action="Edit" asp-route-id=@counter> Edit</a>
        <form asp-controller="Groups" asp-action="Delete" asp-route-id=@counter method="post">
            <button>X</button>
        </form>
        @{counter++;}
    </section>
}
