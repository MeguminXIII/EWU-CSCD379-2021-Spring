@{
    ViewBag.Title = "Users";
}

@model List<UserViewModel>

@{int counter = 0;}

@foreach (var userMember in Model){
    <section>
        @userMember.FirstName @userMember.LastName <a asp-controller="Users" asp-action="Edit" asp-route-id=@counter>Edit</a>
        <form asp-controller="Users" asp-action="Delete" asp-route-id=@counter method="post"><button>Delete</button></form>
        @{counter++;}
    </section>
}
<a asp-controller="Users" asp-action="Create">Create</a>