@model List<UserViewModel>

@{
    ViewBag.Title = "Users Index";
}
@{int counter = 0;}
<section class="grid sm:grid-cols-3">
@foreach(var userViewModel in Model) {
    <section class="border-red-300 border-2 p-6 m-5 rounded-lg flex justify-between">
        <a asp-action="Edit"  asp-route-id=@counter class="text-2xl sm:text-3x1 leading-4 text-black-600 hover:text-red-600">@userViewModel.FirstName @userViewModel.LastName</a>
        <form asp-action="Delete" asp-route-id=@counter method="post">
            <button class="fa-ban-btn" onclick="return confirm('@userViewModel.FullName is about to be deleted. Do you wish to continue?')"><i class="fas fa-ban text-2xl sm:text-2xl leading-4"></i></button>
        </form>
        @{counter++;}
    </section>
}
</section>
<section>
    <button class="btn">
        <a asp-controller="Users" asp-action="Create" class="text-2xl sm:text-2xl p-6">Create User</a>
    </button>
</section>