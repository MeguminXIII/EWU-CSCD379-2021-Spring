@model GiftViewModel
@{ViewBag.Title = "Edit a Gift";}

<form asp-controller="Gifts" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    @await Html.PartialAsync("_CreateOrEdit")
    <div class = "marginTopSpace marginLeftSpace">
        <button class = "generalButton">Update</button>
        <a class="underlinedText inline-block" asp-controller="Gifts" asp-action="Index">Cancel</a>
    </div>
</form>